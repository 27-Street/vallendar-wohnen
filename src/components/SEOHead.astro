---
import type { Language } from '../i18n/translations';
import { getRobotsDirectives, getSiteOrigin, mergeAlternates, normalizeCanonicalPath, toAbsoluteUrl } from '../lib/seo';

interface Props {
  title: string;
  description: string;
  lang: Language;
  canonicalUrl: string;
  ogImage?: string;
  ogImageAlt?: string;
  type?: string;
  noindex?: boolean;
  robots?: string;
  keywords?: string[];
  structuredData?: Record<string, unknown> | Array<Record<string, unknown>>;
  alternates?: Array<{ lang: string; href: string }>;
}

const {
  title,
  description,
  lang,
  canonicalUrl,
  ogImage = '/og-default.png',
  ogImageAlt = 'VallendarWohnen',
  type = 'website',
  noindex = false,
  robots,
  keywords,
  structuredData,
  alternates,
} = Astro.props;

const siteOrigin = getSiteOrigin(Astro.site);
const normalizedCanonicalUrl = /^https?:\/\//.test(canonicalUrl)
  ? canonicalUrl
  : normalizeCanonicalPath(canonicalUrl);
const fullCanonicalUrl = toAbsoluteUrl(siteOrigin, normalizedCanonicalUrl);
const fullOgImageUrl = toAbsoluteUrl(siteOrigin, ogImage);
const fullAlternates = mergeAlternates(Astro.url.pathname, siteOrigin, alternates);
const robotsDirectives = getRobotsDirectives(noindex, robots);
const schemaEntries = structuredData
  ? (Array.isArray(structuredData) ? structuredData : [structuredData])
  : [];

// Map lang to OG locale
const ogLocale = lang === 'de' ? 'de_DE' : 'en_US';
const ogLocaleAlternate = lang === 'de' ? 'en_US' : 'de_DE';
---

<title>{title}</title>
<meta name="description" content={description} />
<link rel="canonical" href={fullCanonicalUrl} />
{robotsDirectives && <meta name="robots" content={robotsDirectives} />}
{keywords && keywords.length > 0 && <meta name="keywords" content={keywords.join(', ')} />}

<!-- Open Graph -->
<meta property="og:site_name" content="VallendarWohnen" />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={fullOgImageUrl} />
<meta property="og:image:alt" content={ogImageAlt} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:image:type" content="image/png" />
<meta property="og:url" content={fullCanonicalUrl} />
<meta property="og:type" content={type} />
<meta property="og:locale" content={ogLocale} />
<meta property="og:locale:alternate" content={ogLocaleAlternate} />

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={fullOgImageUrl} />
<meta name="twitter:image:alt" content={ogImageAlt} />

<!-- Hreflang alternates for multilingual SEO -->
{fullAlternates.map((alternate) => (
  <link rel="alternate" hreflang={alternate.lang} href={alternate.href} />
))}

{schemaEntries.map((schema) => (
  <script type="application/ld+json" set:html={JSON.stringify(schema)} />
))}
