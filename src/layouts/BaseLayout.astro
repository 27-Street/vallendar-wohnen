---
import type { Language } from '../i18n/translations';
import { getTranslation } from '../i18n/translations';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SEOHead from '../components/SEOHead.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  lang: Language;
  canonicalPath?: string;
  ogImage?: string;
  ogImageAlt?: string;
  ogType?: string;
  noindex?: boolean;
  robots?: string;
  keywords?: string[];
  structuredData?: Record<string, unknown> | Array<Record<string, unknown>>;
  alternates?: Array<{ lang: string; href: string }>;
}

const {
  title,
  description,
  lang,
  canonicalPath,
  ogImage,
  ogImageAlt,
  ogType,
  noindex,
  robots,
  keywords,
  structuredData,
  alternates,
} = Astro.props;
const t = getTranslation(lang);
const currentPath = Astro.url.pathname;
const canonicalUrl = canonicalPath ?? currentPath;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <SEOHead
      title={title}
      description={description}
      lang={lang}
      canonicalUrl={canonicalUrl}
      ogImage={ogImage}
      ogImageAlt={ogImageAlt}
      type={ogType}
      noindex={noindex}
      robots={robots}
      keywords={keywords}
      structuredData={structuredData}
      alternates={alternates}
    />
    <slot name="head" />
  </head>
  <body class="flex min-h-screen flex-col">
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:fixed focus:left-4 focus:top-4 focus:z-[100] focus:rounded-lg focus:bg-accent-700 focus:px-4 focus:py-2 focus:text-sm focus:font-semibold focus:text-white focus:shadow-lg"
    >
      {t.a11y.skipToContent}
    </a>
    <noscript>
      <div class="bg-accent-100 px-4 py-3 text-center text-sm text-accent-900">
        {lang === 'de'
          ? 'Einige Funktionen (Bildergalerie, Kontaktformular) ben√∂tigen JavaScript.'
          : 'Some features (image gallery, contact form) require JavaScript.'}
      </div>
    </noscript>
    <Header lang={lang} currentPath={currentPath} />
    <main id="main-content" class="flex-1">
      <slot />
    </main>
    <Footer lang={lang} />
    <script src="../scripts/scroll-animations.ts"></script>
    <script src="../scripts/analytics.ts"></script>
  </body>
</html>
