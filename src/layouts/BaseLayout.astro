---
import type { Language } from '../i18n/translations';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SEOHead from '../components/SEOHead.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  lang: Language;
  ogImage?: string;
  ogType?: string;
}

const { title, description, lang, ogImage, ogType } = Astro.props;
const currentPath = Astro.url.pathname;
const canonicalUrl = currentPath;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <SEOHead
      title={title}
      description={description}
      lang={lang}
      canonicalUrl={canonicalUrl}
      ogImage={ogImage}
      type={ogType}
    />
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
  </head>
  <body class="flex min-h-screen flex-col">
    <noscript>
      <div class="bg-accent-100 px-4 py-3 text-center text-sm text-accent-900">
        {lang === 'de'
          ? 'Einige Funktionen (Bildergalerie, Kontaktformular) ben√∂tigen JavaScript.'
          : 'Some features (image gallery, contact form) require JavaScript.'}
      </div>
    </noscript>
    <Header lang={lang} currentPath={currentPath} />
    <main class="flex-1">
      <slot />
    </main>
    <Footer lang={lang} />
    <script>
      if (window.netlifyIdentity) {
        window.netlifyIdentity.on('init', (user) => {
          if (!user) {
            window.netlifyIdentity.on('login', () => {
              document.location.href = '/admin/';
            });
          }
        });
      }
    </script>
  </body>
</html>
