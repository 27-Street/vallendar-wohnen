// Explicit /admin route so local dev can open the CMS at /admin or /admin/.
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="refresh" content="0;url=/admin/index.html" />
    <title>Redirectingâ€¦</title>
    <script>
      if (typeof window !== 'undefined') {
        const target = `/admin/index.html${window.location.search}${window.location.hash}`;
        window.location.replace(target);
      }
    </script>
  </head>
  <body>
    <a href="/admin/index.html">Continue to CMS</a>
  </body>
</html>
