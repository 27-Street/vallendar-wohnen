---
import { getEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getTranslation } from '../../i18n/translations';
import { translatePath } from '../../i18n/utils';

const lang = 'en' as const;
const t = getTranslation(lang);

const siteSettings = await getEntry('settings', 'site');
const site = siteSettings.data;
---

<BaseLayout title="Contact â€” VallendarWohnen" description="Contact us for viewings and rental inquiries." lang={lang}>
  <!-- Page Header -->
  <section class="bg-gradient-to-br from-accent-950 via-accent-800 to-accent-950 pb-16 pt-32">
    <div class="mx-auto max-w-6xl px-4 sm:px-6">
      <h1 class="text-4xl font-bold tracking-tight text-white sm:text-5xl">
        {t.contact.heading}
      </h1>
      <p class="mt-4 text-lg text-accent-100/80">
        We look forward to hearing from you.
      </p>
    </div>
  </section>

  <!-- Contact Content -->
  <section class="bg-white py-16 sm:py-20">
    <div class="mx-auto max-w-6xl px-4 sm:px-6">
      <div class="grid gap-10 lg:grid-cols-2">
        <!-- Contact Information -->
        <div>
          <h2 class="text-2xl font-bold tracking-tight text-neutral-900">Contact Information</h2>

          <div class="mt-8 space-y-6">
            <!-- Address -->
            <div class="flex items-start gap-4">
              <div class="flex h-10 w-10 shrink-0 items-center justify-center rounded-lg bg-accent-100">
                <svg class="h-5 w-5 text-accent-700" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
                </svg>
              </div>
              <div>
                <p class="text-sm font-semibold text-neutral-900">{t.contact.address}</p>
                <address class="mt-1 not-italic text-sm leading-relaxed text-neutral-600">
                  {site.address.street}<br />
                  {site.address.city}
                </address>
              </div>
            </div>

            <!-- Email -->
            <div class="flex items-start gap-4">
              <div class="flex h-10 w-10 shrink-0 items-center justify-center rounded-lg bg-accent-100">
                <svg class="h-5 w-5 text-accent-700" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
                </svg>
              </div>
              <div>
                <p class="text-sm font-semibold text-neutral-900">{t.contact.email}</p>
                <a href={`mailto:${site.email}`} class="mt-1 text-sm text-accent-700 transition-colors hover:text-accent-900">
                  {site.email}
                </a>
              </div>
            </div>

            <!-- Phone -->
            <div class="flex items-start gap-4">
              <div class="flex h-10 w-10 shrink-0 items-center justify-center rounded-lg bg-accent-100">
                <svg class="h-5 w-5 text-accent-700" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z" />
                </svg>
              </div>
              <div>
                <p class="text-sm font-semibold text-neutral-900">{t.contact.phone}</p>
                <a href={`tel:${site.phone}`} class="mt-1 text-sm text-accent-700 transition-colors hover:text-accent-900">
                  {site.phoneDisplay}
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Form Placeholder -->
        <div>
          <div class="rounded-2xl bg-neutral-50 p-8 ring-1 ring-neutral-200">
            <div class="flex flex-col items-center justify-center py-12 text-center">
              <div class="flex h-16 w-16 items-center justify-center rounded-full bg-accent-100">
                <svg class="h-8 w-8 text-accent-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
                </svg>
              </div>
              <h3 class="mt-6 text-lg font-bold text-neutral-900">Contact Form</h3>
              <p class="mt-3 max-w-sm text-sm leading-relaxed text-neutral-500">
                {t.contact.formPlaceholder}
              </p>
              <a
                href={`mailto:${site.email}`}
                class="mt-6 inline-flex items-center gap-2 rounded-lg bg-accent-700 px-6 py-3 text-sm font-semibold text-white shadow-sm transition-all hover:bg-accent-800 hover:shadow-md focus:outline-none focus:ring-2 focus:ring-accent-500 focus:ring-offset-2"
              >
                Send Email
                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Placeholder -->
  <section class="bg-neutral-50 py-16 sm:py-20">
    <div class="mx-auto max-w-6xl px-4 sm:px-6">
      <h2 class="text-2xl font-bold tracking-tight text-neutral-900">Location</h2>
      <p class="mt-2 text-sm text-neutral-500">Right across from WHU Otto Beisheim School of Management.</p>
      <div class="mt-8 flex items-center justify-center overflow-hidden rounded-2xl bg-gradient-to-br from-accent-50 to-accent-100 ring-1 ring-neutral-200" style="aspect-ratio: 16/7;">
        <div class="text-center">
          <svg class="mx-auto h-10 w-10 text-accent-400/60" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 6.75V15m6-6v8.25m.503 3.498 4.875-2.437c.381-.19.622-.58.622-1.006V4.82c0-.836-.88-1.38-1.628-1.006l-3.869 1.934c-.317.159-.69.159-1.006 0L9.503 3.252a1.125 1.125 0 0 0-1.006 0L3.622 5.689C3.24 5.88 3 6.27 3 6.695V19.18c0 .836.88 1.38 1.628 1.006l3.869-1.934c.317-.159.69-.159 1.006 0l4.994 2.497c.317.158.69.158 1.006 0Z" />
          </svg>
          <p class="mt-3 text-sm font-medium text-accent-600/60">Map coming soon</p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
