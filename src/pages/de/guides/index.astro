---
import { getCollection } from 'astro:content';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getSiteOrigin } from '../../../lib/seo';

const lang = 'de' as const;
const siteOrigin = getSiteOrigin(Astro.site);
const guides = (await getCollection('guides'))
  .sort((a, b) => a.data.order - b.data.order);

const structuredData = [{
  '@context': 'https://schema.org',
  '@type': 'CollectionPage',
  name: 'Ratgeber für Austauschstudierende',
  url: `${siteOrigin}/de/guides/`,
  inLanguage: 'de-DE',
  mainEntity: {
    '@type': 'ItemList',
    itemListElement: guides.map((guide, index) => ({
      '@type': 'ListItem',
      position: index + 1,
      url: `${siteOrigin}/de/guides/${guide.id}/`,
      name: guide.data.title.de,
    })),
  },
}];
---

<BaseLayout
  title="Ratgeber für Austauschstudierende in Vallendar | VallendarWohnen"
  description="Praktische Leitfäden für internationale WHU-Studierende: Wohnungssuche, Anreise, Organisation und Semesterstart in Vallendar."
  lang={lang}
  structuredData={structuredData}
>
  <section class="bg-gradient-to-br from-accent-950 via-accent-800 to-accent-950 pb-16 pt-32">
    <div class="mx-auto max-w-6xl px-4 sm:px-6">
      <h1 class="font-serif text-4xl font-bold text-white sm:text-5xl">Ratgeber für Austauschstudierende</h1>
      <p class="mt-4 max-w-2xl text-lg text-accent-100/85">
        Strukturierte Leitfäden zu Wohnung, Einzug und Organisation für ein erfolgreiches Semester in Vallendar.
      </p>
    </div>
  </section>

  <section class="bg-white py-16 sm:py-20">
    <div class="mx-auto max-w-6xl px-4 sm:px-6">
      <div class="grid gap-6 md:grid-cols-2">
        {guides.map((guide) => (
          <article class="rounded-2xl border border-neutral-200 bg-neutral-50 p-6 transition-shadow hover:shadow-md">
            <p class="text-xs font-semibold uppercase tracking-wide text-accent-700">{guide.data.publishedAt}</p>
            <h2 class="mt-2 font-serif text-2xl font-bold text-neutral-900">
              <a href={`/de/guides/${guide.id}/`} class="hover:text-accent-700">{guide.data.title.de}</a>
            </h2>
            <p class="mt-3 text-sm leading-relaxed text-neutral-600">{guide.data.excerpt.de}</p>
            <a href={`/de/guides/${guide.id}/`} class="mt-5 inline-flex items-center text-sm font-semibold text-accent-700 hover:text-accent-900">
              Guide lesen →
            </a>
          </article>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
